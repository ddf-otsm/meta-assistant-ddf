{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage"]
} 