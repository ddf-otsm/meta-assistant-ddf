{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@server/*": ["server/src/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"]
    },
    "types": ["node", "vitest/globals"],
    "target": "ES2020",
    "lib": ["ES2020"],
    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "config/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ]
} 